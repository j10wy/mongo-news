<div id="comments" class="modal bottom-sheet" data-article-id>
	<div class="modal-content">
		<div class="row">
			<div class="col s12">
				<ul class="tabs">
					<li class="tab col s6">
						<a class="active" href="#comments-tab">Comments</a>
					</li>
					<li class="tab col s6">
						<a href="#leave-comment-tab">Leave Comment</a>
					</li>
				</ul>
			</div>
			<div id="comments-tab" class="col s12">
				<a href="#!" class="modal-action modal-close waves-effect waves-green btn red right">Close</a>
				<h4>Comments</h4>
				<ul class="collection">
					<li class="collection-item avatar">
						<i class="material-icons circle">face</i>
						<span class="title">{{username}}</span>
						<p class="comment-body">{{text}}</p>
					</li>
				</ul>
				<button href="#!" class="modal-action modal-close waves-effect waves-green btn red right">Close</button>
			</div>
			<div id="leave-comment-tab" class="col s12">
				<div class="row">
					<form id="insert-comment" class="col s12">
						<div class="row">
							<div class="input-field col s12">
								<input id="name" type="text" placeholder="Your name">
								<label for="name">Name</label>
							</div>
						</div>
						<div class="row">
							<div class="input-field col s12">
								<textarea maxlength="280" id="comment" class="materialize-textarea" placeholder="Max length is 280 characters..."></textarea>
								<label for="comment">Comment</label>
							</div>
						</div>
						<button type="submit" href="https://www.gamespot.com{{url}}" class="waves-effect waves-light btn red right">Submit</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>