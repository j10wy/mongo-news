<div class="col s12 m6">
	<div class="card" data-article-id="{{id}}">
			<div class="card-image">
				<img class="activator" src="{{img}}">
				<a class="btn modal-trigger btn-floating halfway-fab waves-effect waves-light red darken-3" href="#comments">
					<i class="material-icons">insert_comment</i>
				</a>
			</div>
			<div class="card-content">
				<span class="card-title">
					{{title}}
				</span>
				<p>{{text}}</p>
				<a href="#" class="waves-effect waves-light btn black">
					<i class="material-icons left">open_in_browser</i>OPEN</a>
			</div>
		</div>
</div>